extends layout 

block content
    .flexbox-container-contact-body
      .flexbox-container-contact-body.flexbox-item-contact-header
        h1 Contact
        .break
        ul
          li Bergsätersgatan 1, 421 66 Västra Frölunda, (vid Åkeredsvallen).
          li cesarpizzeria@gmail.com
          li 031 - 28 09 05
        .break
        p Ring oss för att beställa mat eller om du undrar över annat.
      .container
        form(action='contact.html')
          label(for='fname') Förnamn
          input#fname(type='text' name='firstname' placeholder='Ditt förnamn...')
          label(for='lname') Efternamn
          input#lname(type='text' name='lastname' placeholder='Ditt efternamn...')
          label(for='email') Email
          input#email(type='text' name='email' placeholder='Din email...')
          label(for='tnr') Telefon nummer
          input#tnr(type='text' name='tnr' placeholder='Ditt telefon nummer...')
          label
            input(type='radio' name='radio')
            |  Medlem
          br
          label
            input(type='radio' name='radio')
            |  Inte medlem
          br
          br
          label(for='subject') Feedback
          textarea#subject(name='subject' placeholder='Skriv något...' style='height:125px')
          input(type='submit' value='Skicka')
      .flexbox-container-contact-body.flexbox-item-contact-map
        iframe(src='https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d309.3339783640713!2d11.89989714642812!3d57.631168223900275!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x464ff2a848624be1%3A0xa60010ddc8e3e903!2sCesar%20Pizzeria!5e0!3m2!1ssv!2sse!4v1672998678005!5m2!1ssv!2sse' width='800' height='600' style='border:0;' allowfullscreen='' loading='lazy' referrerpolicy='no-referrer-when-downgrade')
